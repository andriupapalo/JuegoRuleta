@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Bet</title>
</head>
<body>
    <div class="row">
        @for (int i = 0; i < ViewBag.ruletas.Count; i++)
        {
            bool valestado = Convert.ToBoolean(ViewBag.ruletas[i].estado.ToString());
            @if (!valestado)
            {
                <div class="col-md-3">
                    <div class="card p-4">
                        <div class="card-body">
                            <form asp-action="OpenRouletes" asp-controller="home" method="POST">
                                <p>Name Of Roulette</p>
                                <h4 class="card-title d-flex justify-content-between align-items-center">
                                    @ViewBag.ruletas[i].name.ToString()
                                </h4>
                                <p>Is Open</p>
                                <p><h4>@ViewBag.ruletas[i].estado.ToString()</h4></p>
                                <input type="hidden" name="name" value="@ViewBag.ruletas[i].name.ToString()" />
                                <input type="hidden" name="estado" value="@ViewBag.ruletas[i].estado.ToString()" />
                                <input type="hidden" name="id" value="@ViewBag.ruletas[i].id.ToString()" />
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block btn-success" type="submit">Open</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                }
            }
        </div>
</body>
</html>
